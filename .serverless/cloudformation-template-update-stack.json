        "Handler": "artisan",
        "Runtime": "provided.al2",
        "FunctionName": "autobid-registry-apis-prod-artisan",
        "MemorySize": 1024,
        "Timeout": 120,
        "Environment": {
          "Variables": {
            "APP_ENV": "prod",
            "BREF_BINARY_RESPONSES": "1",
