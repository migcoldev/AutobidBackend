        "Timeout": 29,
        "Environment": {
          "Variables": {
            "APP_ENV": "prod",
            "BREF_BINARY_RESPONSES": "1",
            "AWS_BUCKET": {
              "Ref": "Storage"
            }
          }
        },
        "Role": {
          "Fn::GetAtt": [
            "IamRoleLambdaExecution",
            "Arn"
